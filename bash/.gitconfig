[color]
    diff = auto
    status = auto
    branch = auto
    interactive = auto
    ui = auto

[merge]
    #tool = meld
    tool = diffuse

[status]
    relativePaths = true
    showUntrackedFiles = no

[diff]
   tool = diffuse
   suppressBlankEmpty = true
   mnemonicprefix = true
   #noprefix = true


[alias]
    st = status
    co = checkout
    br = branch
    ci = commit
    logpretty = log --graph --decorate --pretty=oneline --abbrev-commit

